PORT=4000

# Primary MongoDB (Atlas)
# Example:
# mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/csit-pyqs?retryWrites=true&w=majority&appName=Cluster0
MONGODB_URI=<your-mongodb-uri>

# Fallback MongoDB (Local)
MONGODB_URI_FALLBACK=mongodb://127.0.0.1:27017/csit-pyqs

CLOUDINARY_CLOUD_NAME=<your-cloudinary-cloud-name>
CLOUDINARY_API_KEY=<your-cloudinary-api-key>
CLOUDINARY_API_SECRET=<your-cloudinary-api-secret>

JWT_SECRET=<your-jwt-secret>
ADMIN_USERNAME=<admin-username>
# bcrypt hash for a password (generate with `npx bcrypt-cli hash <password>`)
ADMIN_PASSWORD_HASH=<bcrypt-hash>
